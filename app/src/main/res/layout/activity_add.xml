<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <EditText
        android:id="@+id/add_type"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:hint="请输入记录类型"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintHeight_percent=".15"/>


    <EditText
        android:id="@+id/add_name"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:hint="请输入项目名"
        android:textSize="20dp"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/add_type"
        app:layout_constraintHeight_percent=".15"/>


    <EditText
        android:id="@+id/add_url"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:hint="请输入网址"
        android:textSize="20dp"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/add_name"
        app:layout_constraintHeight_percent=".15"/>

    <EditText
        android:id="@+id/add_username"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:hint="请输入用户名"
        android:textSize="20dp"
        app:layout_constraintTop_toBottomOf="@+id/add_url"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintHeight_percent=".15"/>

    <EditText
        android:id="@+id/add_password"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:hint="请输入密码"
        android:textSize="20dp"
        app:layout_constraintTop_toBottomOf="@+id/add_username"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintHeight_percent=".15"/>


    <EditText
        android:id="@+id/add_note"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:hint="备注"
        android:textSize="20dp"
        app:layout_constraintTop_toBottomOf="@+id/add_password"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintHeight_percent=".15"/>

    <Button
        android:id="@+id/add_save"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:text="@string/button_save"
        android:textSize="20dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintHeight_percent=".1"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/add_note" />

</androidx.constraintlayout.widget.ConstraintLayout>