<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <ImageButton
        android:id="@+id/sync_up"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:background="#90D9F0"
        android:isScrollContainer="false"
        android:src="@drawable/upload"
        android:text="@string/navigation_synchronous_up"
        app:layout_constraintHeight_percent=".5"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <ImageButton
        android:id="@+id/sync_down"
        android:layout_width="0dp"
        android:layout_height="0dp"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toBottomOf="@id/sync_up"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintHeight_percent=".5"
        android:background="#03CAD3"
        android:src="@drawable/download"
        android:text="@string/navigation_synchronous_down"/>
</androidx.constraintlayout.widget.ConstraintLayout>